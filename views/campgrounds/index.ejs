<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New campground</a>
                </p>
            </div>
        </header>


        <div class="row">


            <% campgrounds.forEach((campground) => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card my-2" style="width:350px">
                        <img class="card-img-top" src="<%= campground.image %>" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= campground.name %>
                            </h4>
                            <p class="card-text"><%= campground.description %></p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <% }); %>
