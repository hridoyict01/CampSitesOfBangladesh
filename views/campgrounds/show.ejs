<% include ../partials/header %>
<div id="show-body">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card my-5" style="widows: 700px;">
                    <img class="card-img-top img-responsive" src="<%= campground.image %>" alt="Card image" style="width:100%">
                    <div class="caption-full">
                        <h5 class="text-right">$9.00/night</h5>
                    </div>
                    <div class="card-body">
                        <a href="">
                            <h4 class="card-title text-left">
                                <%= campground.name %>
                            </h4>
                        </a>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                           <em> Submitted By: <%= campground.author.username %></em>
                        </p>
                        <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    </div>
                </div>
                <div class="card card-body bg-faded">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new"> Add new comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach((comment) => { %>
                        <div class="row">
                            <div class="col-md-12">
                             <strong>   <%= comment.author.username %> </strong>
                                    <span class="mr-auto">10 days ago</span>
                                    <p>
                                        <%= comment.text %>
                                    </p>
                            </div>
                        </div>

                        <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
            <% include ../partials/footer %>