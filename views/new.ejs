<% include partials/header %>
    <div class="contain">

        <h1 class="text-center">Create a new campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="" placeholder="Image URL">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description" id="" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="btn btn-dark" href="/campgrounds">Go back</a>
        </div>


    </div>
    <% include partials/footer %>